@model List<BookingApiViewModel.Result>
<!-- List'e olarak geldi ancak .result yine array oldugu icin verildi -->
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<title>Booking Infos</title>
</head>
<body>

	<div class="container col-9">
		<br />
		@using (Html.BeginForm("Index", "BookingByCityId", FormMethod.Post))
		{
			<label>City Id</label>
			<!-- bunu gonderince id'yi cekecek' -->
			<input type="text" class="form-control" name="CityId" />
			<div style="justify-content:space-between;margin:2px;">
				<button class="btn btn-primary">Send</button>
				<a href="/searchlocation" class="btn btn-outline-dark">For having an id</a>
			</div>
		}

		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th>#</th>
					<th>Hotel Name</th>
					<th>Hotel Rate</th>
					<th>Details</th>

				</tr>
			</thead>
			@foreach (var item in Model)
			{
				<tr>
					<th>@item.id</th>
					<th>@item.name</th>
					<th>@item.reviewScore</th>
					<th><a href="#" class="btn btn-outline-dark">Details</a></th>
				</tr>
			}
		</table>
	</div>


</body>
</html>